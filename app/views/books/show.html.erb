<div class="container px-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "shared/side", user:@book.user, book:Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <div>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to user_path(@book.user) do %>
                  <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
                <% end %><br>
                <%= link_to user_path(@book.user) do %>
                  <%= @book.user.name %>
                <% end %>
              </td>
              <td>
                <%= link_to book_path(@book) do %>
                  <%= @book.title %>
                <% end %>
              </td>
              <td><%= @book.body %></td>

              <% if @book.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@ook), class:"btn btn-success btn-sm" %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn btn-danger btn-sm" %>
              </td>
              <% end %>
              <% if @book.favorited_by?(current_user) %>
              <td>
                <%= link_to book_favorites_path(@book, link: 1), method: :delete do %>
                ♥<%= @book.favorites.count %>
                <% end %>
              </td>
              <% else %>
              <td>
                <%= link_to book_favorites_path(@book, link: 1), method: :post do %>
                ♥<%= @book.favorites.count %>
                <% end %>
              </td>
              <% end %>
              <td>
                コメントの数: <%= @book.post_comments.count %>
              </td>
            </tr>
          </tbody>
        </table>

        <% @book.post_comments.each do |post_comment| %>
        <div>
          <%= link_to user_path(post_comment.user) do %>
            <%= attachment_image_tag post_comment.user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
          <% end %>
          <span class="align-bottom"><%= post_comment.user.name %></span>
          <% if post_comment.user == current_user %>
            <%= link_to "Destroy", book_post_comment_path(post_comment.book_id, post_comment), method: :delete, class: "btn btn-danger btn-sm align-bottom" %>
          <% end %>
        <div>
        <div>
          <%= post_comment.comment%>
        </div>
        <% end %>

        <% if @post_comment.errors.any? %>
        <h3 class="text-danger"><%= pluralize(@post_comment.errors.count, "error") %> prohibited this obj from being saved:</h3>
        <ul>
          <% @post_comment.errors.full_messages.each do |message| %>
            <li class="text-danger"><%= message %></li>
          <% end %>
        </ul>
        <% end %>

        <%= form_with model: [@book, @post_comment], local:true do |f| %>
          <div class="form-group">
            <%= f.text_area :comment, class: "form-control", rows: "5" %>
          </div>
          <div class="form-group">
            <%= f.submit "送信" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>