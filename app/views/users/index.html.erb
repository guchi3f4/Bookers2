<div class="container px-md-0">
  <div class="row">
    
    <div class="col-3">
      <%= render partial: "shared/side", locals: { user:@user, book:@book } %>
    </div>
    <div class="col-8 offset-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></th>
            <td><%= user.name %></th>
            <td><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>