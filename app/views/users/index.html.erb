<div class="container px-md-0">
  <div class="row">

    <div class="col-md-3">
      <%= render "shared/side", user:current_user, book:Book.new %>
    </div>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %></th>
            <td><%= user.name %></th>
            <td>フォロー数</td>
            <td>フォロワー数: <%= user.followers.count %></td>
            <td>
            <% unless user == current_user %>
              <% if current_user.following?(user) %>
                <%= link_to "フォローを外す", user_relationships_path(user), method: :delete %>
              <% else %>
                <%= link_to "フォローする", user_relationships_path(user), method: :post %>
              <% end %>
            <% end %>
            </td>
            <td><%= link_to "Show", user_path(user.id) %></th>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>